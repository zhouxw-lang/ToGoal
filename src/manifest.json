{
  "name": "ToGoal",
  "version": "1.1.2",
  "manifest_version": 2,
  "description": "ToGoal, a Chrome extension working together with Toggl Track for setting time-based goals and tracking progress",
  "options_page": "options.html",
  "permissions": [
    "https://api.track.toggl.com/reports/api/v2/*",
    "https://api.track.toggl.com/api/v8/*",
    "https://www.toggl.com/api/v8/*",
    "storage"
  ],
  "icons": {
    "16": "icons/togoal16.png",
    "48": "icons/togoal48.png",
    "128": "icons/togoal128.png"
  },
  "browser_action": {
    "default_title": "ToGoal",
    "default_icon": {
      "16": "icons/togoal16.png",
      "32": "icons/togoal32.png"
    },
    "default_popup": "popup.html"
  }
}
